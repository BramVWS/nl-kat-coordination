#!/bin/bash
set -e

if [ "$1" = "remove" -o "$1" = "purge" ]; then
    if [ -d /usr/share/kat-bytes ]; then
        rm -r /usr/share/kat-bytes
    fi
fi

if [ "$1" = "purge" ]; then
    if [ -e /usr/share/debconf/confmodule ]; then
        . /usr/share/debconf/confmodule
        db_purge
    fi

    if [ -f /etc/kat/bytes.conf ]; then
        rm /etc/kat/bytes.conf
    fi
fi
